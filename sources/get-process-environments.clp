(deffunction get-process-environments ()
  (bind ?result (create$))
  (bind ?id (gensym*))
  (open "/proc/self/environ" ?id)
  (bind ?environment "")
  (while (<> (bind ?c (get-char ?id)) -1)
    (if (= ?c 0)
     then (bind ?result ?result ?environment)
          (bind ?environment "")
     else (bind ?environment (format nil "%s%c" ?environment ?c))))
  (close ?id)
  ?result)
