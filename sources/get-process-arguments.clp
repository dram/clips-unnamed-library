(deffunction get-process-arguments ()
  (bind ?result (create$))
  (bind ?f (gensym*))
  (open "/proc/self/cmdline" ?f)
  (bind ?argument "")
  (while (<> (bind ?c (get-char ?f)) -1)
    (if (= ?c 0)
     then (bind ?result ?result ?argument)
          (bind ?argument "")
     else (bind ?argument (format nil "%s%c" ?argument ?c))))
  (close ?f)
  ?result)
